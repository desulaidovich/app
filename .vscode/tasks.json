{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run application",
			"command": "go",
			"options": {
				"env": {
					"APP_NAME": "dev-app",
					"APP_ENV": "development",
					"APP_DEBUG": "true",
					"HTTP_PORT": "8080",
					"DATABASE_HOST": "localhost",
					"DATABASE_PORT": "5432",
					"DATABASE_NAME": "dev_db",
					"DATABASE_USER_NAME": "postgres",
					"DATABASE_USER_PASSWORD": "postgres",
					"LOG_LEVEL": "debug",
					"LOG_FORMAT": "text",
					"LOG_TIMEFORMAT": "2006-01-02 15:04:05.000"
				}
			},
			"args": [
				"run",
				"${workspaceFolder}/cmd/app/main.go"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build",
			"detail": "Запустить приложение"
		}
	]
}
